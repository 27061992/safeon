@using Safeon.Domain.Models
@model Safeon.Web.Models.Form.ExternalSupportForm
@{
    ViewData["Title"] = (Model.Id > 0 ? "Editar" : "Criar") + " Agente Externo";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form action="@Url.Action("Save")" class="form-horizontal" method="post">
                            @Html.HiddenFor(model => model.Id)

                            <div class="form-group">
                                <label>Nome:</label>
                                @Html.TextBoxFor(model => model.Name, new { @maxlength = "250", @class = "form-control", @autocomplete = "off" })
                            </div>



                            <div class="form-group">
                                <label>Cidade:</label>
                                @Html.TextBoxFor(model => model.City, new { @maxlength = "250", @class = "form-control", @autocomplete = "off" })
                            </div>

                            <div class="form-group">
                                <label>Estado:</label>
                                @Html.TextBoxFor(model => model.UF, new { @maxlength = "128", @class = "form-control", @autocomplete = "off" })
                            </div>

                            <div class="form-group">
                                <label>Latitude:</label>
                                @Html.TextBoxFor(model => model.Latitude, new { @maxlength = "250", @class = "form-control", @autocomplete = "off" })
                            </div>

                            <div class="form-group">
                                <label>Longitude:</label>
                                @Html.TextBoxFor(model => model.Longitude, new { @maxlength = "250", @class = "form-control", @autocomplete = "off" })
                            </div>

                            <div class="form-group">
                                <label>Tipo do Agente Externo:</label>
                                @Html.DropDownListFor(model => model.ExternalSupportTypeId, ((IEnumerable<ExternalSupportType>)ViewBag.ExternalSupportType).Select(x => new SelectListItem {
                                    Text = x.Description,
                                    Value = x.Id.ToString(),
                                    Selected = (Model != null) && (Model.ExternalSupportTypeId == x.Id)
                                }), "Escolha um Tipo do Agente Externo", new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label>Telefone:</label>
                                @Html.TextBoxFor(model => model.PhoneNumber, new { @maxlength = "250", @class = "form-control", @autocomplete = "off" })
                            </div>

                            <div class="form-group">
                                <label>Telefone celular:</label>
                                @Html.TextBoxFor(model => model.CellPhoneNumber, new { @maxlength = "250", @class = "form-control", @autocomplete = "off" })
                            </div>

                            <div class="form-group">
                                <label>Email:</label>
                                @Html.TextBoxFor(model => model.Email, new { @maxlength = "250", @class = "form-control", @autocomplete = "off" })
                            </div>

                            <div class="form-group">
                                <label>Observação:</label>
                                @Html.TextAreaFor(model => model.Note, new { @maxlength = "250", @class = "form-control", @autocomplete = "off" })
                            </div>

                            <div class="form-group text-right m-b-0">
                                <button class="btn btn-primary waves-effect waves-light" type="submit">
                                    Salvar
                                </button>
                                <a href="/ExternalSupport/Index" type="reset" class="btn btn-secondary waves-effect m-l-5">
                                    Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>