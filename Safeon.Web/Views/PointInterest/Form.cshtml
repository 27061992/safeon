@using Safeon.Domain.Models
@model Safeon.Web.Models.Form.PointInterestForm
@{
    ViewData["Title"] = (Model.Id > 0 ? "Editar" : "Criar") + " Ponto de Interesse";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form action="@Url.Action("Save")" class="form-horizontal" method="post">
                            @Html.HiddenFor(model => model.Id)

                            <div class="form-group">
                                <label>Nome:</label>
                                @Html.TextBoxFor(model => model.Name, new { @maxlength = "250", @class = "form-control", @autocomplete = "off" })
                            </div>

                            <div class="form-group">
                                <label>Descrição:</label>
                                @Html.TextBoxFor(model => model.Description, new { @maxlength = "250", @class = "form-control", @autocomplete = "off" })
                            </div>

                            <div class="form-group">
                                <label>Endereço:</label>
                                @Html.TextBoxFor(model => model.Address, new { @maxlength = "250", @class = "form-control", @autocomplete = "off" })
                            </div>

                            <div class="form-group">
                                <label>Latitude:</label>
                                @Html.TextBoxFor(model => model.Latitude, new { @maxlength = "250", @class = "form-control", @autocomplete = "off" })
                            </div>

                            <div class="form-group">
                                <label>Longitude:</label>
                                @Html.TextBoxFor(model => model.Longitude, new { @maxlength = "250", @class = "form-control", @autocomplete = "off" })
                            </div>

                            <div class="form-group">
                                <label>Tipo do Ponto de Interesse:</label>
                                @Html.DropDownListFor(model => model.PointInterestTypeId, ((IEnumerable<PointInterestType>)ViewBag.PointInterestType).Select(x => new SelectListItem {
                                    Text = x.Description,
                                    Value = x.Id.ToString(),
                                    Selected = (Model != null) && (Model.PointInterestTypeId == x.Id)
                                }), "Escolha um Tipo do Ponto de Interesse", new { @class = "form-control" })
                                @*<select class="form-control chosen-ajax" name="PointInterestTypeId" id="PointInterestTypeId"
            asp-items="@ViewBag.PointInterestType">
        </select>*@
                            </div>
                            <div class="form-group text-right m-b-0">
                                <button class="btn btn-primary waves-effect waves-light" type="submit">
                                    Salvar
                                </button>
                                <a href="/PointInterest/Index" type="reset" class="btn btn-secondary waves-effect m-l-5">
                                    Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>