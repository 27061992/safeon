@model Safeon.Web.Models.Form.Occurrence.OccurrenceForm

@{
    ViewData["Title"] = "Ocorrência";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="information-tab" data-toggle="tab" href="#information" role="tab" aria-controls="information" aria-selected="true">
                            <span class="d-none d-sm-block">Informações</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="history-tab" data-toggle="tab" href="#history" role="tab" aria-controls="history" aria-selected="false">
                            <span class="d-none d-sm-block">Histórico</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="actuation-tab" data-toggle="tab" href="#actuation" role="tab" aria-controls="actuation" aria-selected="false">
                            <span class="d-none d-sm-block">Acionamentos</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="attachment-tab" data-toggle="tab" href="#attachment" role="tab" aria-controls="attachment" aria-selected="false">
                            <span class="d-none d-sm-block">Anexo</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="checklist-tab" data-toggle="tab" href="#checklist" role="tab" aria-controls="checklist" aria-selected="false">
                            <span class="d-none d-sm-block">Checklist</span>
                        </a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div class="tab-pane active" id="information" role="tabpanel" aria-labelledby="information-tab">
                        @await Html.PartialAsync("_Information.cshtml")
                    </div>
                    <div class="tab-pane" id="history" role="tabpanel" aria-labelledby="history-tab">
                        @await Html.PartialAsync("_Log.cshtml")
                    </div>
                    <div class="tab-pane" id="actuation" role="tabpanel" aria-labelledby="actuation-tab">
                        @await Html.PartialAsync("_Actuation.cshtml")
                    </div>
                    <div class="tab-pane" id="attachment" role="tabpanel" aria-labelledby="attachment-tab">
                        @await Html.PartialAsync("_Attachment.cshtml")
                    </div>
                    <div class="tab-pane" id="checklist" role="tabpanel" aria-labelledby="checklist-tab">
                        @await Html.PartialAsync("_Checklist.cshtml")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- jQuery  -->
<script src="~/js/jquery.min.js"></script>
<script src="~/js/bootstrap.bundle.min.js"></script>